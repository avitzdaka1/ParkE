<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.omeryaari.parke.ui.ParkSearchActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textview_search_1"
            android:text="@string/search_text1"
            android:textColor="@android:color/black"
            android:textSize="25sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textview_search_2"
                    android:text="@string/search_text2"
                    android:textColor="@android:color/black"
                    android:textSize="17sp"
                    android:padding="0dp"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/editext_search_address"
                    android:maxLines="1"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textview_search_3"
                    android:text="@string/search_text3"
                    android:textColor="@android:color/black"
                    android:textSize="17sp"
                    android:padding="0dp"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/editext_search_time"
                    android:maxLines="1"
                    android:focusable="false"/>
            </LinearLayout>

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:background="@android:color/transparent"
                android:src="@drawable/button_search"
                android:scaleType="fitCenter"/>

        </LinearLayout>

        <fragment
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:id="@+id/highscores_fragment_placeholder"
            android:name="com.omeryaari.minesweeper.ui.TableScoreFragment"
            android:layout_marginBottom="60dp"/>

    </LinearLayout>

</RelativeLayout>
